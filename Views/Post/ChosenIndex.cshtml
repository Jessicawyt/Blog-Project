@model IEnumerable<Post>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BlogIt</title>
    <script src="https://kit.fontawesome.com/e268927a80.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/blog.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Dosis&family=PT+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Barlow:wght@300&family=Chewy&family=Inconsolata:wght@200&family=Moo+Lah+Lah&family=Nanum+Pen+Script&family=Open+Sans:wght@300&family=Padauk:wght@400;700&family=Patrick+Hand&family=Shizuru&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dosis&family=IM+Fell+DW+Pica+SC&family=Kanit:wght@500&family=PT+Sans&family=Permanent+Marker&family=Playfair+Display:ital,wght@0,500;1,400&family=Rubik:wght@500&display=swap" rel="stylesheet">
    
    <style>
        .container{
            height:92vh;
            display:flex;
            background-color:floralwhite;
            overflow:hidden;
        }

        .container a{
            color:#272220e6;
            
        }

        .left{
            background-image:url('/uploads/@ViewBag.Category.Image');
            background-size:auto 150%;
            background-repeat:no-repeat;
            background-position:35% 50%;
            position:relative;
            width:30%;
            height:100%;
        }

        .left::before{
            content:'';
            position:absolute;
            left:0;
            right:0;
            top:0;
            bottom:0;
            background-color:#5d50507a;
        }

        .middle{
            
            padding:2rem 4.5rem 2rem .6rem;         
            width:62%;
            display:flex;
            flex-direction:column;
            justify-content:space-evenly;
            align-items:flex-start;
        }

        h2{
            font-weight:700;
            font-size:1.5rem;
            letter-spacing:-.2px;
            font-family: 'Playfair Display', serif;
        }

        .right{
            
            padding-bottom:1rem;
            padding-right:3%;
            color:floralwhite;
            background-color:#e4cfcf6b;
            width:8%;
            writing-mode: vertical-rl;
            text-orientation: mixed;
            display:flex;
            justify-content:flex-end;
            align-items:center;
            font-size:6rem;  
            letter-spacing:2px;
            font-weight:600;
        }

        .post{
            display:flex;
            flex-direction:column;
            border-bottom:.6px solid #a7a5a5;
            width:100%;
            
        }

        .post p{
            margin-top:.3rem;
            align-self:flex-end;
            font-size:.83rem;
            color:#aea7a9cc;
        }

    </style>
</head>
<body>
    <nav>
        <h1>BlogIt</h1>
        <ul>
            <li>@Html.ActionLink("Categories", "Index", "Category")</li>
           @* <li>@Html.ActionLink("Posts", "Index", "Post")</li>*@
            <li>@Html.ActionLink("New Post", "Create", "Post")</li>
        </ul>
    </nav>

<main class="container">
    <div class="left"></div>
    <div class="middle">
        @foreach(Post post in Model)
        {
            <div class="post">
                
                <h2>@Html.ActionLink(post.Title, "Detail", new {id = post.Id})</h2> 
                <p>@post.PublishDate</p>
            </div>
        }
     </div> 
     <div class="right">@ViewBag.CtgName</div>
</main>




</body>
</html>