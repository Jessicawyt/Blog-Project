@model Post




@{
   
}

<div class="background">
    <h3>Post Something New</h3>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @*<label asp-for="Title" class="control-label"></label>*@
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <label class="danger">@ViewBag.Error</label>

        <div class="form-group">
            @*<label asp-for="Author" class="control-label"></label>*@
            <input asp-for="Author" class="form-control" placeholder="Autor"/>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <label class="danger">@ViewBag.Error</label>

        <div class="form-group">
            @*<label asp-for="CategoryId" class="control-label"></label>*@
            <select asp-for="CategoryId" class="" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                <option selected disabled>Please choose a category</option>
            </select>
        </div>
        <label class="danger">@ViewBag.Error</label>

        <div class="form-group">
            @*<label asp-for="Body" class="control-label"></label>*@
            <textarea asp-for="Body" class="post-body"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
        <label class="danger">@ViewBag.Error</label>

        <input type="submit" value="Create" class="btn btn-primary" />
    
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
